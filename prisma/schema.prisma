generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  spotifyUserId String   @unique
  displayName   String?
  email         String?
  imageUrl      String?
  isPremium     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lastSyncedAt  DateTime?

  token         SpotifyToken?
  listening     ListeningEvent[]
}

model SpotifyToken {
  id           String   @id @default(cuid())
  userId       String   @unique
  accessToken  String
  refreshToken String
  expiresAt    DateTime

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
}

model Track {
  id          String   @id // Spotify Track ID
  name        String
  artistName  String
  albumName   String?
  albumImageUrl String?
  durationMs  Int?
  explicit    Boolean?
  albumType   String?
  albumReleaseDate String?
  albumReleaseDatePrecision String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  features    AudioFeatures?
  events      ListeningEvent[]
  artists     TrackArtist[]
}

model Artist {
  id          String   @id // Spotify Artist ID
  name        String
  imageUrl    String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tracks      TrackArtist[]
}

model TrackArtist {
  trackId     String
  artistId    String
  position    Int

  track       Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  artist      Artist   @relation(fields: [artistId], references: [id], onDelete: Cascade)

  @@id([trackId, artistId])
  @@unique([trackId, position])
  @@index([artistId])
  @@index([trackId, position])
}

model AudioFeatures {
  trackId        String  @id
  danceability   Float?
  energy         Float?
  valence        Float?
  tempo          Float?
  acousticness   Float?
  instrumentalness Float?
  liveness       Float?
  speechiness    Float?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  track          Track   @relation(fields: [trackId], references: [id], onDelete: Cascade)
}

model ListeningEvent {
  id        String   @id @default(cuid())
  userId    String
  trackId   String
  playedAt  DateTime
  durationMs Int?
  contextType String?
  contextUri  String?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@index([userId, playedAt])
  @@index([trackId])
  @@index([userId, contextType])
  @@unique([userId, playedAt])
}
